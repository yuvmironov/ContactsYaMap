@import "../libs/Accordeon/MFSAccordeon"
@import "../libs/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar"
*
	margin 0
	padding 0
[class*="ymaps-2"][class*="-ground-pane"] {
	filter saturate(0.5) contrast(95%) brightness(105%)
}

.MapWrap
	display flex
	justify-content space-between
	height 90vh
#Map, #DescMap
	height 100%
#Map
	width 40%
#DescMap
	width 60%
#ContactTabs
	width: 100%

.City
	&-Link
		display: flex;
		padding: 29px 47px;
		transition 0.4s
		position relative
		font-family: Rubik;
		line-height: 26px;
		font-size: 18px;
		color: #4F4F4F;
		&:after
			content ''
			display block
			width 18px
			height 2px
			top: calc(50% - 1px);
			left: 19px;
			background red
			position absolute
		&:before
			content ''
			display block
			width 2px
			height 18px
			top: calc(50% - 9px);
			left: 27px;
			background red
			position absolute
		&:hover
			background-color #f2f2f2
			transition 0.4s
	
.Brand
	&-Link 
		display: flex;
		flex-direction: row-reverse;
		justify-content: flex-end;
		align-items: center;
		padding 19px 19px
		font-family: Rubik;
		line-height: 26px;
		font-size: 18px;
		color: #4F4F4F;
		position: relative
		//border-top: 1px solid #f2f2f2;
		&:after
			content ''
			position: absolute
			display block
			width 12px
			height: 3px
			background-color: #A9A9A9
			transform rotate(45deg);
			right: 86px
		&:before
			content ''
			position: absolute
			display block
			width 12px
			height: 3px
			background-color: #A9A9A9
			transform rotate(-45deg);
			right: 78px

	&-Logo 
		width: 195px;
		margin-right: 53px;
